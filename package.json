{
  "name": "ynab-sync",
  "version": "1.0.0",
  "author": "Seb Ruiz",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/sebr/ynab-sync.git"
  },
  "scripts": {
    "start": "DEBUG='ynab-sync:*' sls invoke local -f sync",
    "deploy": "sls deploy",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "aws-sdk": "^2.587.0",
    "chrome-aws-lambda": "^2.0.1",
    "debug": "4.1.1",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "puppeteer-core": "^2.0.0",
    "qs": "^6.9.1",
    "source-map-support": "^0.5.16",
    "ynab": "1.17.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.37",
    "@types/chrome": "0.0.91",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.23",
    "@types/node-fetch": "^2.5.4",
    "@types/puppeteer-core": "^1.9.0",
    "@types/qs": "^6.9.0",
    "jest": "^24.9.0",
    "mockdate": "^2.0.5",
    "puppeteer": "^2.0.0",
    "rimraf": "^3.0.0",
    "serverless": "^1.59.3",
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-kms-secrets": "^1.0.5",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^3.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*_test.+(ts|js)"
    ],
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "restoreMocks": true,
    "automock": false
  }
}
